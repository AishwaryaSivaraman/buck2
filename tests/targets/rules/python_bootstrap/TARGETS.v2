prelude = native

prelude.python_bootstrap_library(
    name = "lib",
    srcs = [
        "lib.py",
    ],
    visibility = ["//buck2/tests/targets/rules/python_bootstrap/..."],
)

prelude.python_bootstrap_binary(
    name = "hello",
    main = "hello.py",
)

prelude.python_bootstrap_binary(
    name = "hello_imported",
    main = "hello_imported.py",
    deps = [
        ":lib",
    ],
)

prelude.python_bootstrap_binary(
    name = "hello_with_args",
    main = "hello_with_args.py",
)

prelude.genrule(
    name = "use_hello_with_args",
    out = "out",
    cmd = "$(exe :hello_with_args) foo bar > $OUT",
)
