load(":defs.bzl", "simple_copy", "simple_symlinked_dir", "simple_write")

simple_write(
    name = "simple_write",
    string_attr = select({
        ":constraint1": "hello-platform1",
        ":constraint2": "hello-platform2",
        "DEFAULT": "hello",
    }),
)

simple_copy(
    name = "simple_copy",
    to_copy = ":simple_write",
)

simple_symlinked_dir(
    name = "simple_symlinked_dir",
    inputs = [":simple_write", ":simple_copy"],
)

platform(
    name = "default1",
)

platform(
    name = "default2",
)

platform(
    name = "platform1",
    constraint_values = [
        ":constraint1",
    ],
)

platform(
    name = "platform2",
    constraint_values = [
        ":constraint2",
    ],
)

constraint_setting(
    name = "constraint_setting",
)

constraint_value(
    name = "constraint1",
    constraint_setting = ":constraint_setting",
)

constraint_value(
    name = "constraint2",
    constraint_setting = ":constraint_setting",
)
